%h1 Give an exercise
%br
.row

  = form_for @exercise do |f|
    .form-group
      .row
        .div.col-sm-2.col-sm-offset-5
          = f.label 'Exercise:'
          = f.select :exercise_list_id, options_for_select(@exercise_lists), {}, {class: "form-control"}
    .form-group
      .row
        .div.col-sm-2.col-sm-offset-5
          = f.label 'User:'
          = f.select :user_id, options_for_select(@users), {}, {class: "form-control"}
    .form-group
      .row
        .div.col-sm-2.col-sm-offset-5
          = f.label 'Weight:'
          = f.text_field :weight, class: 'text-info form-control'
          %br
    .form-group
      .row
        .div.col-sm-2.col-sm-offset-5
          = f.submit "Create", method: :post, class: 'btn btn-primary btn-lg btn-block'
          %a.btn.btn-default.btn-lg.btn-block{href: '/exercises', class: 'btn btn-default btn-lg btn-block'} Cancel

