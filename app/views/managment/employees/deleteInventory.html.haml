.modal.fade.deleteModal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden": "true", "data-dismiss": "modal", type:  "button"} Ã—
        %h4.modal-title New inventory employee
      .modal-body
        %form.form-horizontal{id: 'form'}
          .form-group
            %label.col-sm-3.control-label{for: "inventory_id"} Inventory ID
            .col-sm-5
              %select{name:"employee[inventory_id]", id: "employee_inventory"}
          .form-group
            %label.col-sm-3.control-label{for: "quantity"} Quantity
            .col-sm-5
              %input.form-control{id: 'quantity', name: "employee[quantity]", placeholder: "Quantity", type: "integer"}/
          .modal-footer
            %button.btn.btn-danger{id: 'deleteQtt',type: "submit"} Delete
            %button.btn.btn-danger{id: 'deleteEmployee',type: "submit"} Delete all
            %button.btn.btn-default{"data-dismiss": "modal", type: "button"} Close