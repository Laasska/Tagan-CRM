.modal.fade.newModal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden": "true", "data-dismiss": "modal", type:  "button"} Ã—
        %h4.modal-title New inventory employee
      .modal-body
        %form.form-horizontal{id: 'form'}
          .form-group
            %label.col-sm-3.control-label{for: "user_id"} User ID
            .col-sm-5
              = collection_select(:employee,:user_id, @user, :id, :full_name, prompt: ' ')
          .form-group
            %label.col-sm-3.control-label{for: "inventory_id"} Inventory ID
            .col-sm-5
              =collection_select(:employee,:inventory_id, Inventory.where('quantity_of_free != 0').order([:id]), :id, :inventory_name,  prompt: ' ')
          .form-group
            %label.col-sm-3.control-label{for: "date_of_receipt"} Date Of Receipt
            .col-sm-5
              %input.form-control{id: 'date_of_receipt' ,name: "employee[date_of_receipt]", placeholder: "Date_Of_Receipt", type: "date"}/
          .form-group
            %label.col-sm-3.control-label{for: "quantity"} Quantity
            .col-sm-5
              %input.form-control{id: 'quantity', name: "employee[quantity]", placeholder: "Quantity", type: "number"}/
          .form-group
            %input.form-control{id: 'employee_inventory_name', name: "employee[inventory_name]"  }/
          .modal-footer
            %button.btn.btn-primary{id: 'createEmployees',type: "submit"} Add New